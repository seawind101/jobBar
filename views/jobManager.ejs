<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= company ? company.name : 'Company' %> â€” Jobs
  </title>
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/job.css">
  <script src="/js/jobManager.js"></script>

</head>

<body>
  <main class="jobs-container">
    <div class="nav-row">
      <button class="small-btn" onclick="location.href='/companies'">All companies</button>
      <button class="small-btn" onclick="location.href='/'">Home</button>
    </div>

    <div>
      <h1>Company: <%= company ? company.name : 'Not found' %>
      </h1>

      <section aria-labelledby="jobs-list">
        <h2 id="jobs-list">Job Statuses</h2>
        <% if (!jobs || jobs.length===0) { %>
          <p>No jobs posted for this company yet.</p>
          <% } else { %>
            <% jobs.forEach(function(job){ %>
              <% if (job.employee_id) { %>
                <article class="job-card" role="article">
                  <div class="job-title"><b>
                      <%= job.title %>
                    </b></div>
                  <div class="job-desc">
                    <%= job.description %>
                  </div>
                  <div class="job-pay">Pay: <%= job.pay %>
                  </div>
                  <div class="job-meta taken">
                    Taken by <%= job.employee_name %>
                      
                    <button class="complete-button" data-job-id="<%= job.id %>" data-employee-id="<%= job.employee_id %>" data-pay="<%= job.pay %>" data-title="<%= job.title %>">Mark As Complete</button>
                      
                  </div>
                </article>
              <% } else { %>
                <article class="job-card" role="article">
                  <div class="job-title"><b>
                      <%= job.title %>
                    </b></div>
                  <div class="job-desc">
                    <%= job.description %>
                  </div>
                  <div class="job-pay">Pay: <%= job.pay %>
                  </div>
                  <div class="job-meta available">Available</div>
                </article>
              <% } %>
            <% }) %>
          <% } %>
      </section>
    </div>
    <div id="custom-popup" class="popup-container">
      <div class="popup-content">
        <span class="close-btn">&times;</span>
        <h2>Mark this Job as Complete?</h2>
        <form id="popup-form">
          <label class="pin">PIN</label>
          <input id="pin" type="password" pattern="\d{4}" minlength="4" maxlength="4" placeholder="Input your 4-Digit PIN"
            oninput="this.value = this.value.replace(/[^0-9]/g, '');" required>

          <button id="completeTransfer" type="submit">Mark Complete</button>
        </form>
      </div>
    </div>
  </main>
</body>


</html>